
<input type="text" id="selectDate" class="form-inline datepicker" placeholder="抽出日" />
<input type="button" class = "btn btn-primary btn-large" id="btnSelect" value="うい！" />

<script type="text/javascript">
    $(function () {
        var dateFormat = 'yyyy/mm/dd';
        var inputDate = $('#selectDate').datepicker({
            language: 'ja'
            , format: dateFormat
            ,dateFormat: dateFormat
        });

        $('#btnSelect').click(function () {
            var date = inputDate.datepicker('getDate');
            var yyyyMMdd = date.getFullYear() + "/"+
                ("0" + (date.getMonth() + 1)).slice(-2) + "/" +
                ("0" + date.getDate()).slice(-2);
            var postData = { date: yyyyMMdd };

            $.ajax({
                type: 'GET',
                url: './Home/Select',
                data: postData,
                dataType: 'json'
            }).done((data, textStatus, jqXHR) => {
                console.log('dkone', jqXHR.status);


            }).fail((jqXHR, textStatus, errorThrown) => {
                console.log('fail', jqXHR.status);
            }).always(() => {
                console.log('always');
            });
        });


    });
</script>